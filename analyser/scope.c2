    if (d) {
        // diags.report("module %s imported with alias %s");
        return nil;
    }

    // TODO check all modules for better diag
    ast.Module* mod = s.allmodules.find(name_idx);
    if (mod) {
        // diags.report("module not imported");
    } else {
        // diags.report("unknown module");
    }

module ast;

import ast_context;
import string_buffer;
import utils local;

public type AliasTypeDecl struct {
    Decl parent;
    QualType refType;
} @(opaque)

public func AliasTypeDecl* AliasTypeDecl.create(ast_context.Context* c, const char* name, SrcLoc loc, bool is_public, QualType refType) @(inline)
{
    AliasTypeDecl* d = c.alloc(sizeof(AliasTypeDecl));
    //HUH refType passed to both Decl.qt and AliasTypeDecl.refType
    d.parent.init(DeclKind.StructType, name, loc, is_public, refType);
    d.refType = refType;
    return d;
}

public func Decl* AliasTypeDecl.asDecl(AliasTypeDecl* d) @(inline) {
    return &d.parent;
}

public func void AliasTypeDecl.print(const AliasTypeDecl* d, string_buffer.Buf* out, u32 indent) {
    d.parent.printKind(out, indent, "AliasTypeDecl");
    d.parent.printBits(out);
    d.parent.printName(out);

    out.add(" ");
    d.refType.print(out);
    out.add("\n");
}


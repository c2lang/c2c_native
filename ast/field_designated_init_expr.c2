module ast;

import ast_context;
import string_buffer;
import utils local;

public type FieldDesignatedInitExpr struct {
    Expr parent;
    const char* field;
    Expr* initValue;
} @(opaque)

public func FieldDesignatedInitExpr* FieldDesignatedInitExpr.create(ast_context.Context* c,
                                                                    const char* field,
                                                                    SrcLoc loc,
                                                                    Expr* initValue) @(inline)
{
    FieldDesignatedInitExpr* e = c.alloc(sizeof(FieldDesignatedInitExpr));
    e.parent.init(ExprKind.FieldDesignatedInit, loc, 0, 0, 0);
    e.field = field;
    e.initValue = initValue;
    return e;
}

public func void FieldDesignatedInitExpr.print(const FieldDesignatedInitExpr* e, string_buffer.Buf* out, u32 indent) {
    out.indent(indent);
    out.print("FieldDesignatedInitExpr %s\n", e.field);
    e.initValue.print(out, indent + 2);
}


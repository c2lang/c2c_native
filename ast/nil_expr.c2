module ast;

import ast_context local;
import utils local;

import stdio local; // TEMP

public type NilExpr struct {
    Expr expr;
} @(opaque)

public func NilExpr* NilExpr.create(Context* c, SrcLoc loc, bool val) @(inline) {
    NilExpr* e = c.alloc(sizeof(NilExpr));
    e.expr.init(ExprKind.Nil, loc, 1, 1, 0);
    return e;
}

public func void NilExpr.print(const NilExpr* e) {
    printf("NilExpr\n");
}

